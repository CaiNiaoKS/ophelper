swiper{
  width: 100%;
}
 
.swiper-box{
  position: relative;
  width: 100%;
}
.dots{ 
  position: absolute; 
  left: 0; 
  right: 0;
  top: 0; 
  bottom: 10rpx; 
  display: flex; 
  justify-content: center; 
} 
.dots .dot{ 
  margin: 0 2rpx; 
  width: 14rpx; 
  height: 4rpx; 
  border-radius: 8rpx; 
  transition: all .6s; 
} 
.dots .dot.active{ 
  width: 24rpx; 
  background: orchid; 
}
swiper image {
  width: 100%;
  height: 100%;
}

