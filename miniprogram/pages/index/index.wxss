/**index.wxss**/

page {
  background: #f3f5f8;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.userinfo, .uploader, .tunnel {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #007aff;
  background-color: white;
  background-size: cover;
}

.userinfo-nickname::after {
  border: none;
}

.uploader, .tunnel {
  height: auto;
  padding: 0 0 0 40rpx;
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
}

.uploader-text, .tunnel-text {
  width: 100%;
  line-height: 52px;
  font-size: 34rpx;
  color: #007aff;
}

.uploader-container {
  width: 100%;
  height: 400rpx;
  padding: 20rpx 20rpx 20rpx 0;
  display: flex;
  align-content: center;
  justify-content: center;
  box-sizing: border-box;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.uploader-image {
  width: 100%;
  height: 360rpx;
}

.tunnel {
  padding: 0 0 0 40rpx;
}

.tunnel-text {
  position: relative;
  color: #222;
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: space-between;
  box-sizing: border-box;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.tunnel-text:first-child {
  border-top: none;
}

.tunnel-switch {
  position: absolute;
  right: 20rpx;
  top: -2rpx;
}

.disable {
  color: #888;
}

.service {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: linear-gradient(#007aff, #0063ce);
  box-shadow: 0 5px 10px rgba(0, 0, 0, 0.3);
  display: flex;
  align-content: center;
  justify-content: center;
  transition: all 300ms ease;
}

.service-button {
  position: absolute;
  top: 40rpx;
}

.service:active {
  box-shadow: none;
}

.request-text {
  padding: 20rpx 0;
  font-size: 24rpx;
  line-height: 36rpx;
  word-break: break-all;
}

.input {
  padding-left: 15px;
  padding-right: 32px;
  height: 35px;
  width: 240px;
  margin-top: 6px;
  flex-direction: row;
  display: inline-flex;
  font-size: 16px;
}
.inputView{
    padding-right: 5px;
    border:  2px solid #fff;
    width: 95%;
    border-radius: 10px;
    margin-left: 5px;
    margin-right: 5px;
    margin-top: 10px;
    background: #fff;
}
.searchButon{
  top: 30rpx;
  font-size: 32rpx;
  color: #007aff;
  background-color: white;
  background-size: cover;
}

.searchView {
    display: flex;
    flex-direction: row;
    height: 98rpx;
    background: #efeff4;
    align-items: center;
}

.searchItem {
    display: flex;
    width: 100%;
    background: #fff;
    flex-direction: row;
    border-radius: 10rpx;
    margin-right: 20rpx;
    margin-left: 20rpx;
}

.searchItem image {
    height: 100%;
    width: 35px;
    align-self: center;
    align-items: center;
    margin-left: 10rpx;
    margin-right: 30px;
    background-image: url(“data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABAAAAAQCAYAAAAf8/9hAAAAm0lEQVQ4T2NkoBAwUqifAdmA4wwMDBZQA/8wMDCwohn+H4l/mYGBQQ/ERzYApCCSgYHhBQMDA4h9EM0Aa6ihEgwMDMthetENUGRgYHhAwFsKDAwM92liAFnhCfMCyFkJJJqwAORdqhlAouUI5eixIMPAwPCUgGnyDAwMd2DpZHBF4wUGBgZ9JOej5xPkpAxK9lboSZmsgKQ4NwIAxkIfEXHjfUcAAAAASUVORK5CYII=”);
}

.searchItem input {
  flex: 1;
  font-size: 30rpx;
  flex-direction: row;
  display: inline-flex;
}
.img {
  height: 32px;
  width: 32px;
  align-self: center;
  /* align-items: flex-end; */
  margin-left: 28px;
  
  flex-direction: column;
  display: inline-flex;
  }
.img1 {
  height: 16px;
  width: 16px;
  align-self: center;
  align-items: center;
  margin-left: 15px;
  
  flex-direction: column;
  display: inline-flex;
  }

.textView {
  margin-top: 0px;
  display: flex;
  flex-direction: column;
  font-size: 16px;
  justify-content: center;
}
.slide-image {
  display: block;
  height: 285rpx;
  width:100%;
  margin-top: 2px;
  margin-bottom: 2px;
}
.swiperView {
  margin-top: 2px;
  margin-bottom: 2px;
}
.swiper-box .wx-swiper-dots.wx-swiper-dots-horizontal{
     margin-bottom: 2rpx;
}
.swiper-box .wx-swiper-dot{
    width:30rpx;
    display: inline-flex;
    height: 8rpx;
    margin-left: 20rpx;
    justify-content:space-between;
}
.swiper-box .wx-swiper-dot::before{
    content: '';
    flex-grow: 1; 
    background: rgba(255,255,255,0.8);
    border-radius: 8rpx
}
.swiper-box .wx-swiper-dot-active::before{
    background:rgba(141, 141, 145, 0.767);   
}
.commentsView {
  font-size: 25rpx;
  margin-top: 15px;
  margin-bottom: 5px;
  flex-direction: row;
  display: flex;
  justify-content: center;
}
.emptResultView {
  font-size: 32rpx;
  margin-top: 80px;
  flex-direction: row;
  display: inline-flex;
  justify-content: center; 

}
